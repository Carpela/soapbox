= form_for @speaker do |f|
  - if @speaker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@speaker.errors.count, "error")} prohibited this speaker from being saved:"
      %ul
        - @speaker.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sector
    = f.text_field :sector
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
